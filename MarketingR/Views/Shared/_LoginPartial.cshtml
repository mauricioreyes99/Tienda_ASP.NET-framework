@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(" Register", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "glyphicon glyphicon-plus", id = "registerLink" })</li>
        <li>@Html.ActionLink(" Login", "Login", "Account", routeValues: null, htmlAttributes: new {@class= "glyphicon glyphicon-user", id = "loginLink" })</li>
    </ul>
    
}
    <script>
        function Registrar() {
            document.getElementById("btnRegister")
            location.href = "/Account/Register/";
        }
        function Iniciar() {
            document.getElementById("btnIniciar")
            location.href = "/Account/Login/";
        }
    </script>